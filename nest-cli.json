{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "deleteOutDir": true,
    "typeCheck": true,
    "assets": [
      {
        "include": "../frontend/dist/**/*",
        "outDir": "./dist/frontend/"
      }
    ]
  }
}